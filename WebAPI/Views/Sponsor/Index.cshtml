@model WebAPI.ViewModels.CommonViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 class="title">Sponsors</h1>

<div id="introduction" style="font-size: 16px; font-style: normal; color: #2e363d; margin-top: 40px; font-family: Calibri;">
    <span>Silicon Valley Code Camp is proud to offer sponsorships at four levels, <span style="font-weight: bold">Platinum, Gold, Silver and Bronze.</span> </span>

    <br />
    <br />

    <ul>
        <li>
            <table>
                <tr>
                    <td>
                        <div style="vertical-align: top; background: transparent url('../Content/Images/bullet.jpg') no-repeat; width: 10px; height: 10px; padding-right: 5px; display: inline-block;" />
                    </td>
                    <td>
                        <div style="vertical-align: top;">
                            <span style="font-weight: bold">All levels</span> will receive recognition and thanks from the community for their participation.
                        </div>
                    </td>
                </tr>
            </table>


        </li>
        <li>
            <br />
        </li>
        <li>
            <table>
                <tr>
                    <td>
                        <div style="vertical-align: top; background: transparent url('../Content/Images/bullet.jpg') no-repeat; width: 10px; height: 10px; padding-right: 5px; display: inline-block;" />
                    </td>
                    <td>
                        <div style="vertical-align: top;">
                            <span style="font-weight: bold">Platinum and Gold Sponsors</span> may be listed in our schedule along with the specific events their contributions help pay for. For Example, Along side Lunch on the schedule will be the name of the sponsor(s) who helped make that happen.  
                        </div>
                    </td>
                </tr>
            </table>



        </li>
        <li>
            <br />
        </li>
        <li>
            <table>
                <tr>
                    <td>
                        <div style="vertical-align: top; background: transparent url('../Content/Images/bullet.jpg') no-repeat; width: 10px; height: 10px; padding-right: 5px; display: inline-block;" />
                    </td>
                    <td>
                        <div style="vertical-align: top;">
                            <span style="font-weight: bold">Platinum sponsors</span> will receive additional benefits which include being able to set up a table at our Registration area where these sponsors can give out material about their company as well as discuss employment opportunities with Code Camp attendees
                        </div>
                    </td>
                </tr>
            </table>
        </li>

    </ul>

    <br />
    <br />
    <span>Contact <span style="font-weight: bold; text-decoration: underline"><a href="#">info@siliconvalley-codecamp.com</a></span> if you are interested in being a sponsor or you would like to make a raffle prize donation.  </span>

    <br />
    <br />

    <h1 class="title" style="font-size: 20px">OUR SPONSORS</h1>
    <br />
    <br />
    <table>

        <tr>
            <td rowspan="2">
                <div style="vertical-align: top; background: transparent url('../Content/Images/featured.jpg') no-repeat; width: 86px; height: 93px; padding-right: 5px; display: inline-block;" />
            </td>
            <td><span style="font-style: italic; vertical-align: top;">Every week, some of our sponsors provide us with amazing limited time offers for our registered members. Click on the golden ribbon next to their logo to see their special offer !</span></td>
        </tr>
        <tr>

            <td>
                <div style="vertical-align: top; background: transparent url('../Content/Images/showSpecial.jpg') no-repeat; width: 245px; height: 29px; padding-right: 5px; display: inline-block;" />
            </td>
        </tr>
    </table>

</div>




<br />
<br />

<div style="width: 630px; display: inline-block;">

    <h1 class="title1">SPONSORS</h1>

    @{string levels = string.Empty;}
    @foreach (var sponsor1 in Model.Sponsors)
    {

        if (!levels.Contains(@sponsor1.SponsorSupportLevel))
        {
            levels += @sponsor1.SponsorSupportLevel;           
        
        <br />
        
        <a href="@sponsor1.NavigateURL">
            <div style="float: left; padding: 10px; margin: 15px; background-color: rgba(248,248,248,255);">
                <h1 class="title1" style="font-size: 16px; margin-top: -10px; margin-left: 0px">@sponsor1.SponsorSupportLevel.ToUpper()</h1>

                @foreach (var sponsor in Model.Sponsors)
                {

                    if (@sponsor1.SponsorSupportLevel == @sponsor.SponsorSupportLevel)
                    {
                    <div class="roundBorder section jobPosts" style="background-color: rgba(247,247,247,255); border: solid 1px #ccc; float: left; height: 120px; width: 170px; margin: 7px; margin-top: 25px;">

                        <table>
                            <tr>

                                <td style="vertical-align: top;">
                                    <div class="roundBorder section jobPosts" style="margin-left: 5px; margin-top: 10px; border: solid 1px #ccc; color: #fff; background-color: rgba(213,213,213,255); height: 15px; width: 15px; padding-left: 5px; padding-top: 3px; padding-bottom: 5px; font-size: 20px">?</div>

                                </td>
                                <td>
                                    <img style="height:60px; width:100px; margin:10px" src="@(sponsor.ImageURL)?format=gif&w=160&h=160&scale=both&mode=pad&bgcolor=white" alt="@sponsor.SponsorName"  />


                                </td>
                            </tr>
                        </table>

                        <br />
                        <div style="min-height: 25px; width: 170px; font-weight: bold; background-color: rgba(37,170,226,255); color: #fff; text-align: center; font-family: Calibri; font-size: 14px; vertical-align: middle; padding-top: 5px; margin-top: 5px; border-bottom-left-radius: 10px; max-height: 50px">@sponsor.SponsorName
                        </div>

                        <br />
                        <br />


                    </div>}
                }
                <br />
                <br />
            </div>

        </a>

        }
    }


</div>







<script type="text/javascript">
    $(document).ready(function () {

        $("#sponsorBottomBar").hide();
    });

</script>
