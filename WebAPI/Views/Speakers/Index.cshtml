@model WebAPI.ViewModels.CommonViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Speakers</h2>

       <table id='myTable' >
 
        @foreach (var speaker in Model.Speakers)
        { 
          
            <tr>
                <td>@speaker.UserFirstName @speaker.UserLastName    </td>
                 <td>@speaker.AttendeeId   </td>
                <td> <img src="@(speaker.ImageUrl)?width=70"/>   </td>
           
            <td>
           
            <table>
                @foreach (var session in speaker.Sessions)
                {
                    <tr>
                       
                        <td><a href="@(session.SessionUrl)">@session.TitleEllipsized</a>  </td>
                        
                        

                    </tr>
                }
            </table>
                </td>
          </tr>
          
        }
    

</table>

